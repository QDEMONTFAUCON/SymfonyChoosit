{% extends 'base.html.twig' %}

{% block title %}{{ 'liste des produits'|trans }}{% endblock %}

{% block body %}
    <section class="py-5">
		<div class="container px-4 px-lg-5 mt-5">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
				{% for produit in produits %}
					<div class="col mb-5">
						<div class="card h-100">
							<img class="card-img-top" src="{{ produit.fichier }}" alt="..." />
							<div class="card-body p-4">
								<div class="text-center">
									<h5 class="fw-bolder">{{ produit.nom }}</h5>
									<span class="badge bg-dark text-white ms-1 rounded-pill">{{ produit.prix }} â‚¬</span>
								</div>
							</div>
							<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
								<div class="text-center">
									<a class="btn btn-outline-dark mt-auto" href="{{ path('produit_produit', {'slug':produit.slug}) }}">{{ 'voir la fiche'|trans }}</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
    </section>
{% endblock %}
