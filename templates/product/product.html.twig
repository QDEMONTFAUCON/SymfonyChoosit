{% extends 'base.html.twig' %}

{% block title %}{{ 'details du produit'|trans }}{% endblock %}

{% block body %}
    <section class="py-5">
		<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
			<div class="col mb-5">
				<div class="card h-100">
					<img class="card-img-top" src="{{ product.file }}" alt="..." />
					<div class="card-body p-4">
						<div class="text-center">
							<h5 class="fw-bolder">{{ product.name }}</h5>
							<span class="badge bg-dark text-white ms-1 rounded-pill">{{ product.price }} €</span>
							<br/>
							{{ product.description }}
						</div>
					</div>
					<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
					<div class="text-center">
					{{ form_start(formQuantity) }}
						{{ form_row(formQuantity.id, {'attr':{'value':product.id}}) }}
						{{ form_row(formQuantity.quantity, {'label':"nombre à ajouter"|trans, 'attr':{'placeholder':"1", 'value':1, 'min':1, 'class':"form-control"}}) }}
						<button type="submit" class="btn btn-outline-dark mt-auto">{{ 'ajouter au panier'|trans }}</button>
					{{ form_end(formQuantity) }}
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}